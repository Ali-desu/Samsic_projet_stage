# SERVER
SPRING_SERVER_PORT=9090

# DATABASE (Replace with your Aiven MySQL credentials)
SPRING_DATASOURCE_URL=jdbc:mysql://<aiven-host>:<port>/<database>?ssl-mode=REQUIRED
SPRING_DATASOURCE_USERNAME=<your-username>
SPRING_DATASOURCE_PASSWORD=<your-password>
SPRING_JPA_HIBERNATE_DDL_AUTO=update

# MAIL (Replace with your SMTP settings)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=<your-email>
MAIL_PASSWORD=<your-app-specific-password>
MAIL_PROPERTIES_MAIL_SMTP_AUTH=true
MAIL_PROPERTIES_MAIL_SMTP_STARTTLS_ENABLE=true
MAIL_PROPERTIES_MAIL_SMTP_CONNECTIONTIMEOUT=5000
MAIL_PROPERTIES_MAIL_SMTP_WRITETIMEOUT=5000
MAIL_PROPERTIES_MAIL_SMTP_TIMEOUT=5000

# JWT (Replace with a secure key, at least 64 characters)
JWT_SECRET=<your-secure-secret-key-must-be-at-least-64-characters-long>
JWT_EXPIRATION=86400000